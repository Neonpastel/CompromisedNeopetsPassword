mixin song(song)
    tr

        td.image
            img(src=song.Metadata.Image)

            
        td.title
            br
            span #{song.Artist} - 
                a(href=song.Links.Songwhip)=song.Song
        
        td.metadata
            p=song.Metadata.Genres.join(", ")
            p=song.Metadata.Release_Date

        td.transcript
            a(href="../../" + song.File) Here!

        td.musixmatch
            if song.Contributions.Musixmatch
                a(href=song.Contributions.Musixmatch.url)=song.Contributions.Musixmatch.text
            else
                span /

        td.genius 
            if song.Contributions.Genius
                a(href=song.Contributions.Genius.url)= song.Contributions.Genius.text
            else
                span /
        

